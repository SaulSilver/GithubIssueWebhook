<div>
    <h3>Issues</h3>
    {{#if issues }}
        <ul>
            {{#each issues}}
                <!--For each snippet in the array -->
            <li> {{title}}  <br>
                {{issueBody}}   <br>
                {{comments}}    <br>
                {{issueUrl}}    <br>
                {{created_at}}   <br>
                {{updated_at}}   <br>
            {{/each}}
        </ul>
    {{else}}
        <!--If the issues array is empty -->
        There are no issues to show.
    {{/if}}


</div>
